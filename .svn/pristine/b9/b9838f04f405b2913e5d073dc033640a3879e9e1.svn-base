<script type="text/javascript">
function getRootPath() {
    var curPath = window.document.location.href;
    var pathName = window.document.location.pathname;
    var pos = curPath.indexOf(pathName);
    var localhostPath = curPath.substring(0, pos);
    //var projectName = pathName.substring(0, pathName.substr(1).indexOf('/') + 1);
    return localhostPath;
}
	console.log(getRootPath());
	var loginUrl = getRootPath()+"/AccountingOnline/user/checkLogin?url=Onlineducation/getsign";
	
	function login(){
		var sign;
		$.ajax({
			async:false,
	        url: getRootPath() + "/Onlineducation/checkLogin",
	        type: "POST",
	        data: {},
	        dataType:"json",
	        traditional: true,
	        success: function (result) {
	        	sign = result.data.sign;
	        },
	        error:function(){
	        	alert("请求失败");
	        }
	    });
		return sign;
	}
	
	function pay(){
		var way = "pay";
		var sign = login();
		//alert(sign);
		if(sign == null){
			location.href = loginUrl;
		}else{			
			$.ajax({
	            url: getRootPath()+"/AccountingService/ziliao",
	            type: "POST",
	            data: {
	                "way": way,
	                "code":null,
	                "sign":sign
	            },
	            traditional: true,
	            success: function (data) {
	                if (data.success) {
	                    location.href = data.url;
	                    return true;
	                } else {
	                    alert("支付未成功，请重新购买");
	                    location.reload(true);
	                }
	            }	           
	        });
		}
		
	}
	

	
	function jihuoma(){
		var way = "jihuoma";		
		var code = $("#code").val();		
		$.ajax({
            url: "/AccountingService/ziliao",
            type: "POST",
            data: {
                "way": way,
                "code":code,
                "sign":null
            },
            traditional: true,
            success: function (data) {
                if (data.success) {
                    location.href = data.url;
                    return true;
                } else {
                    alert("激活码有误，请重新输入！");
                    location.reload(true);
                }
            },            
            error: function () {
                alert("未登录，请您先登录");
                location.href = loginUrl;
            }
        });
	}
